@model TrackMyWork.Models.Client
@Html.ValidationSummary(true, "", new { @class = "text-danger" })

@{
    ViewData["Title"] = "Edit Client";
}

<div class="mt-[2rem] min-h-[80vh] px-2">
    <div class="mt-6 flex justify-end">
    <a href="@Url.Action("Index")"
       class="border-2 cursor-pointer rounded-md border-solid bg-Secondary px-6 py-3 text-sm font-semibold text-ColorWhite shadow-md transition duration-300 hover:bg-ColorWhite hover:text-Secondary">
        Back to Clients
    </a>
    </div>
    <form asp-action="Edit" asp-controller="Client" method="post" enctype="multipart/form-data" class="bg-white mx-auto max-w-lg space-y-6 rounded-lg p-6 shadow-lg">
       
        <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>
        <input type="hidden" asp-for="ClientId" />
        <!-- First Name -->
        <div class="">
            <label asp-for="FirstName" class="text-gray-700 mb-1 block text-sm font-medium"></label>
            <span asp-validation-for="FirstName" class="text-red-500 text-sm"></span>
            <input asp-for="FirstName" class="border-2 mt-1 block w-full rounded-md border-Secondary p-2 shadow-sm focus:outline-none sm:text-sm" name="FirstName" required />
        </div>

        <!-- Last Name -->
        <div class="">
            <label asp-for="LastName" class="text-gray-700 mb-1 block text-sm font-medium"></label>
            <span asp-validation-for="LastName" class="text-red-500 text-sm"></span>
            <input asp-for="LastName" class="border-2 mt-1 block w-full rounded-md border-Secondary p-2 shadow-sm focus:outline-none sm:text-sm" required name="LastName" />
        </div>

        <!-- Email -->
        <div class="">
            <label asp-for="Email" class="text-gray-700 mb-1 block text-sm font-medium"></label>
            <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
            <input asp-for="Email" class="border-2 mt-1 block w-full rounded-md border-Secondary p-2 shadow-sm focus:outline-none sm:text-sm" required name="Email" />
        </div>

        <!-- Submit Button -->
        <div class="">
            <input type="submit" value="Update" class="border-2 w-full cursor-pointer rounded-[5px] bg-Primary py-2 font-bold" />
        </div>
    </form>
</div>