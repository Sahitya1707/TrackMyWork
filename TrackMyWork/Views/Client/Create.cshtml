@model TrackMyWork.Models.Client
@Html.ValidationSummary(true, "", new { @class = "text-danger" })

@{
    ViewData["Title"] = "Add Client";
}
<h2 class="text-2xl font-extrabold text-Secondary text-center my-[10px] tracking-widest mt-8">Add Client</h2>
<div class="mt-[6rem] min-h-[80vh]">
    <form asp-action="Create" asp-controller="Client" method="post" enctype="multipart/form-data" class="space-y-6 bg-white p-6 rounded-lg shadow-lg max-w-lg mx-auto">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>

        <!-- First Name -->
        <div class="">
            <label asp-for="FirstName" class="block text-sm font-medium text-gray-700 mb-1"></label>
            <span asp-validation-for="FirstName" class="text-red-500 text-sm"></span>
            <input asp-for="FirstName" class="mt-1 block w-full rounded-md border-2 border-Secondary shadow-sm focus:outline-none sm:text-sm p-2" name="FirstName" required/>
        </div>
       
        <!-- Last Name -->
        <div class="">
            <label asp-for="LastName" class="block text-sm font-medium text-gray-700 mb-1"></label>
            <span asp-validation-for="LastName" class="text-red-500 text-sm"></span>
            <input asp-for="LastName" class="mt-1 block w-full rounded-md border-2 border-Secondary shadow-sm focus:outline-none sm:text-sm p-2" required name="LastName"/>
        </div>

        <!-- Email -->
        <div class="">
            <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1"></label>
            <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
            <input asp-for="Email" class="mt-1 block w-full rounded-md border-2 border-Secondary shadow-sm focus:outline-none sm:text-sm p-2" required name="Email"/>
        </div>

        <!-- Submit Button -->
        <div class="">
            <input type="submit" value="Create" class="w-full bg-Primary font-bold border-2 rounded-[5px] py-2 cursor-pointer" />
        </div>
    </form>
</div>