@model IEnumerable<TrackMyWork.Models.Client>

@{
    ViewData["Title"] = "Client";
}

<h2 class="text-2xl font-extrabold text-Secondary text-center my-[10px] tracking-widest">Client List</h2>

<div class="relative min-h-[80vh]">
    <button class="text-ColorBlack px-4 py-2 rounded-md shadow hover:bg-Secondary transition hover\:text-ColorWhite duration-300 top-0 right-[2rem] absolute">
        <a asp-action="Create">Add New Client</a>
    </button>

    <table class="border-collapse mx-auto shadow-lg">
        <thead>
            <tr>
                <th class="border-2 border-TextColorBlack p-4">First Name</th>
                <th class="border-2 border-ColorBlack p-4">Last Name</th>
                <th class="border-2 border-ColorBlack p-4">Email</th>
                <th class="border-2 border-ColorBlack p-4">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="border-2 p-4">     @Html.DisplayFor(modelItem => item.FirstName)</td>
                    <td class="border-2 p-4"> @Html.DisplayFor(modelItem => item.LastName)</td>
                    <td class="border-2 p-4"> @Html.DisplayFor(modelItem => item.Email)</td>
                    <td class="border-2 flex p-4 gap-x-[5px]">
                     
                        <a class="bg-[green] border-2 border-ColorBlack text-ColorWhite p-2 text-sm hover:bg-ColorBlack hover:border-[green] rounded-[5px] uppercase shadow-sm" asp-action="Edit" asp-route-id="@item.ClientId">Edit</a>
                        <!-- using form so that I can delete directly click here not using another view.-->
                        <form asp-action="Delete" asp-route-id="@item.ClientId" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@item.ClientId" />
                            <button type="submit" class="bg-[red] border-2 border-ColorBlack text-ColorWhite p-2 text-sm hover:bg-ColorBlack hover:border-[red] rounded-[5px] uppercase shadow-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
