@model Message

@{
    ViewData["Title"] = "Send Message";
}



<div class="flex flex-wrap justify-center">
    <div class="w-full p-4 md:w-1/3">
        <form asp-action="Create" class="bg-primary text-colorWhite rounded-lg p-6 shadow-lg">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>
            <div class="mb-4">
                <label asp-for="Content" class="mb-2 block text-sm font-medium"></label>
                <textarea asp-for="Content" class="form-control border-secondary block w-full rounded border p-2" > </textarea>
                <span asp-validation-for="Content" class="text-danger text-sm"></span>
            </div>
            <div class="mb-4">
                <label asp-for="SentDate" class="mb-2 block text-sm font-medium"></label>
                <input asp-for="SentDate" class="form-control border-secondary block w-full rounded border p-2" />
                <span asp-validation-for="SentDate" class="text-danger text-sm"></span>
            </div>
            <div class="mb-4">
                <label asp-for="ProjectId" class="mb-2 block text-sm font-medium"></label>
                <select asp-for="ProjectId" class="form-control border-secondary block w-full rounded border p-2" asp-items="ViewBag.ProjectId"></select>
            </div>
            <div class="mb-4">
                <label asp-for="SenderId" class="mb-2 block text-sm font-medium"></label>
                <p class="text-colorBlack">@ViewData["SenderEmail"]</p>
            </div>
            <div class="mb-4">
                <!--

                  <label class="form-check-label inline-flex items-center">
                     <input class="form-check-input mr-2" asp-for="IsRead" />
                     <span>@Html.DisplayNameFor(model => model.IsRead)</span>
                 </label>
                -->
               
            </div>
            <div class="mb-4">
                <input type="submit" value="Send Message" class="border-2 cursor-pointer rounded-md border-solid bg-Secondary px-6 py-3 text-sm font-semibold text-ColorWhite shadow-md transition duration-300 hover:bg-ColorWhite hover:text-Secondary" />
            </div>
        </form>
    </div>
</div>
<div class="mr-[2rem] mt-4 flex justify-end">
    <a asp-action="Index" class="border-2 cursor-pointer rounded-md border-solid bg-Primary px-6 py-3 text-sm font-semibold text-ColorBlack shadow-md transition duration-300 hover:bg-ColorBlack hover:text-Primary">Back to List</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
