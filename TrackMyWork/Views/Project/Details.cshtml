@model TrackMyWork.Models.Project

@{
    ViewData["Title"] = Model.Title;
}
<div class="border-b-2 relative flex h-[25rem] w-full items-center justify-center border-solid bg-Primary bg-cover bg-no-repeat" style="background: rgb(252,158,255);
background: linear-gradient(200deg, rgba(252,158,255,1) 1%, rgba(213,213,213,1) 61%, rgba(144,230,255,1) 100%);">
    <p class="relative mb-6 text-center text-5xl font-bold uppercase tracking-widest text-Primary" style="-webkit-text-stroke:1px black;">
        @Model.Title
    </p>
</div>
<div class="container mx-auto p-4">
    <h1 class="text-2xl font-bold">@Model.Title</h1>
    <p>Description: @Model.Description</p>
    <p>Start Date: @Model.StartDate.ToShortDateString()</p>
    <p>Deadline: @Model.DeadlineDate.ToShortDateString()</p>
    <p>
        Urgency:
        @if (Model.Urgency == 1)
        {
            <span class="text-red-600">High</span>
        }
        else if (Model.Urgency == 2)
        {
            <span class="text-blue-600">Medium</span>
        }
        else
        {
            <span class="text-yellow-500">Low</span>
        }
    </p>
    <p>Status: @Model.Status</p>

    @* Comments Section *@
    <h3 class="mt-4 text-xl font-semibold">Messages</h3>
    <form method="post" asp-action="AddComment">
        <textarea name="comment" class="w-full rounded border px-2 py-1" placeholder="Leave a message"></textarea>
        <button type="submit" class="text-white mt-2 rounded bg-Secondary px-4 py-2">Submit</button>
    </form>

    @* Display Comments *@
    <div class="mt-4">
        <h4 class="font-bold">All Messages</h4>
        
    </div>

    <div class="mt-6">
        <a href="@Url.Action("Index")" class="border-2 bg-gray-400 text-white rounded px-4 py-2">Back to Projects</a>
    </div>
</div>
