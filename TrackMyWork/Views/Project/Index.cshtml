@model IEnumerable<TrackMyWork.Models.Project>

@{
    ViewData["Title"] = "My Projects";
}
<div class="border-b-2 relative flex h-[25rem] w-full items-center justify-center border-solid bg-Primary bg-cover bg-no-repeat" style="background: rgb(252,158,255);
background: linear-gradient(200deg, rgba(252,158,255,1) 1%, rgba(213,213,213,1) 61%, rgba(144,230,255,1) 100%);">
    <p class="relative mb-6 text-center text-5xl font-bold uppercase tracking-widest text-Primary" style="-webkit-text-stroke:1px black;">
        @ViewData["Title"]
    </p>
</div>

<div class="container mx-auto min-h-[80vh] px-4">
    <div class="mb-4 flex justify-end">
        <a asp-action="Create" class="rounded-md px-4 py-2 text-ColorBlack shadow transition duration-300 hover:bg-Secondary hover\:text-ColorWhite">
            Add New Project
        </a>
    </div>


        <div class="container mx-auto p-4">
       

            @foreach (var project in Model)
          
        {
          
                <div class="my-[1rem] mb-4 rounded-lg border-ColorBlack bg-ColorWhite p-4 shadow-lg">
                    <h2 class="text-xl font-semibold uppercase">@Html.DisplayFor(modelItem => project.Title)</h2>
                    <p class="mb-2">@Html.DisplayFor(modelItem => project.Description)</p>
                    <p class="">Start Date: @Html.DisplayFor(modelItem => project.StartDate)</p>
                <p class="text-lg font-semibold capitalize">
                    @project.Client?.FirstName @project.Client?.LastName
                    </p>
                <p class="mt-2 font-bold">Urgency:
                    @if (project.Urgency == 1)
                    {
                        <span class="text-[red]">High</span> 
                    }
                    else if (project.Urgency == 2)
                    {
                        <span class="text-[blue]">Medium</span> 
                    }
                    else if (project.Urgency == 3)
                    {
                        <span class="text-[yellow]">Low</span> 
                    }
               
                </p>
                    <div class="mt-4">
                    <a asp-action="Edit" asp-route-id="@project.ProjectId" class="border-2 rounded-[5px] border-ColorBlack bg-[green] p-2 text-sm uppercase text-ColorWhite shadow-sm hover:bg-ColorBlack hover:border-[green]">Edit</a>

                        <form asp-action="Delete" asp-route-id="@project.ProjectId" method="post" class="inline">
                            <input type="hidden" name="_method" value="DELETE" />
                        <button type="submit" class="border-2 rounded-[5px] border-ColorBlack bg-[red] p-2 text-sm uppercase text-ColorWhite shadow-sm hover:bg-ColorBlack hover:border-[red]">Delete</button>
                        </form>
                    </div>
                </div>
            }
        </div>
    
</div>
