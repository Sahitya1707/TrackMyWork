<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TrackMyWork</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300..700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/output.css">
 

</head>
<body>
    <header>
        <nav class="md:p-4 md:w-[100vw] w-auto ">
            <div class="container mx-auto flex md:block justify-between items-center">
                <!-- Logo/Image -->
                <a asp-action="home" asp-controller="index">
                    <img src="https://png.pngtree.com/png-vector/20211023/ourmid/pngtree-salon-logo-png-image_4004444.png" alt="Logo" class="w-[3rem] fixed top-[2%] left-[2%] h-[3rem] ">

                </a>

                <ul class="md:flex  fixed md:flex-row top-[50%] left-[10%] bg-[] fixed items-center gap-x-4 font-semibold uppercase text-ColorBlack font-semibold fixed z-[50] bg-[red]">

                    <li class="hover:underline">
                        <a  asp-controller="home" asp-action="index" class="">
                            Home
                        </a>
                        
                        </li>
                    <li class="hover:underline">
                        <a   asp-action="index" asp-controller="client"> Clients </a>
                  </li>

                    <li class="hover:underline">

                        <a asp-action="index" asp-controller="project">Project</a>

                   </li>
                   <li class="hover:underline">
                        <a href="/TimeTracking" class="">Time Tracking</a>
                   </li>
                    <li class ="hover:underline">
                        <a href="/Invoices" class="">Invoices</a>

</li>
                   
                
                </ul>
            </div>
        </nav>
    </header>
    <div class="">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-Primary p-[2rem] w-[100vw]">
        <div class="text-center ">
            &copy; 2024 - TrackMyWork - Sahitya Neupane - 200568451 - Georgian College Project - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-decoration-none text-decoration-underline-hover">Privacy</a>
        </div>
    </footer>

    <!-- Load jQuery first, then Bootstrap JS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
